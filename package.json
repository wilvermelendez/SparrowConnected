{
  "name": "sparrow-connected",
  "version": "1.0.0",
  "description": "Sparrow Connected Application",
  "scripts": {
    "start": "concurrently \"npm run start:api\" \"npm run start:ui\"",
    "start:api": "npm run start -w packages/api",
    "start:ui": "npm run start -w packages/ui",
    "db-start": "npm run db-start -w packages/api",
    "db-populate": "npm run db-populate-w packages/api",
    "build": "npm run build -w packages/shared -w packages/api -w packages/ui",
    "restoreWorkspaces": "npm run restoreWorkspaces -w packages/shared -w packages/api -w packages/ui && rm -rf node_modules/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilvermelendez/SparrowConnected.git"
  },
  "author": "Wilver Melendez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wilvermelendez/SparrowConnected/issues"
  },
  "homepage": "https://github.com/wilvermelendez/SparrowConnected#readme",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^6.3.0"
  }
}
